<?xml version="1.0"?>

<?include "cpack_variables.wxi"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
    <Product Id="$(var.CPACK_WIX_PRODUCT_GUID)"
        Name="$(var.CPACK_PACKAGE_NAME)"
        Language="1033"
        Version="$(var.CPACK_PACKAGE_VERSION)"
        Manufacturer="$(var.CPACK_PACKAGE_VENDOR)"
        UpgradeCode="$(var.CPACK_WIX_UPGRADE_GUID)">

        <Package InstallerVersion="301" InstallPrivileges="elevated"
                 Compressed="yes" InstallScope="perMachine" />

        <Media Id="1" Cabinet="Project.cab" EmbedCab="yes" CompressionLevel="high" />

        <MajorUpgrade
            Schedule="afterInstallInitialize"
            AllowSameVersionUpgrades="yes"
            DowngradeErrorMessage="A newer version of [ProductName] is already installed. Setup will now exit."/>

        <Property Id="FOUNDNSISINSTALLER">
            <RegistrySearch Id="FOUNDNSISINSTALLER_REGSEARCH"
                Root="HKLM"
                Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\$(var.CPACK_PACKAGE_NAME)"
                Name="UninstallString"
                Type="raw"
                Win64="no" />
        </Property>
        <Condition Message="An old version of $(var.CPACK_PACKAGE_NAME) has been detected. Please uninstall it manually before running this installer.">
            <![CDATA[NOT FOUNDNSISINSTALLER]]>
        </Condition>

        <WixVariable Id="WixUILicenseRtf" Value="$(var.CPACK_WIX_LICENSE_RTF)"/>
        <Property Id="WIXUI_INSTALLDIR" Value="INSTALL_ROOT"/>

        <!-- PropertyRef of the account users for setting InstallDir permission explicitly -->
        <PropertyRef Id="WIX_ACCOUNT_LOCALSYSTEM" />
        <PropertyRef Id="WIX_ACCOUNT_USERS" />
        <PropertyRef Id="WIX_ACCOUNT_ADMINISTRATORS" />

        <DirectoryRef Id="INSTALL_ROOT">
            <!-- Create component for setting the install directory permission explicitly -->
            <Component Id="FluentDoAgentAcl" Guid="{6779b04e-70a5-4973-888d-06865155e9f5}">
                <CreateFolder>
                    <!--
                        Read/Execute: Builtin Users
                        All:: Builtin Administrators, Service, System account(by default)
                    -->
                    <Permission User="[WIX_ACCOUNT_USERS]" GenericExecute="yes" GenericRead="yes" Traverse="yes"/>
                    <Permission User="[WIX_ACCOUNT_ADMINISTRATORS]" GenericAll="yes" Traverse="yes"/>
                    <Permission User="[WIX_ACCOUNT_LOCALSYSTEM]" GenericAll="yes" Traverse="yes"/>
                </CreateFolder>
            </Component>
        </DirectoryRef>

        <?ifdef CPACK_WIX_PRODUCT_ICON?>
        <Property Id="ARPPRODUCTICON">ProductIcon.ico</Property>
        <Icon Id="ProductIcon.ico" SourceFile="$(var.CPACK_WIX_PRODUCT_ICON)"/>
        <?endif?>

        <?ifdef CPACK_WIX_UI_BANNER?>
        <WixVariable Id="WixUIBannerBmp" Value="$(var.CPACK_WIX_UI_BANNER)"/>
        <?endif?>

        <?ifdef CPACK_WIX_UI_DIALOG?>
        <WixVariable Id="WixUIDialogBmp" Value="$(var.CPACK_WIX_UI_DIALOG)"/>
        <?endif?>

        <FeatureRef Id="ProductFeature">
            <ComponentRef Id="FluentDoAgentAcl"/>
        </FeatureRef>

        <UIRef Id="$(var.CPACK_WIX_UI_REF)" />

        <?include "properties.wxi"?>
        <?include "product_fragment.wxi"?>

        <Property Id="LAUNCHSERVICE" Value="1"/>
        <SetProperty Id="LAUNCHSERVICE" Value="0" After="LaunchConditions" Sequence="first">
          <![CDATA[%NOT_FLB_SVC_LAUNCH <> ""]]>
        </SetProperty>

        <Property Id="CreateFluentDoAgentWinSvc" Value=" "/>
        <CustomAction Id="SetCreateFluentDoAgentWinSvcCommand" Property="CreateFluentDoAgentWinSvc" Value="&quot;sc.exe&quot; create @FLB_OUT_NAME@ binpath= &quot;\&quot;[INSTALL_ROOT]bin\@FLB_OUT_NAME@.exe\&quot; -c \&quot;[INSTALL_ROOT]conf\@FLB_OUT_NAME@.conf\&quot;&quot; start= delayed-auto" Execute="immediate" />
        <CustomAction Id="CreateFluentDoAgentWinSvc" BinaryKey="WixCA" DllEntry="CAQuietExec" Execute="deferred" Return="ignore" Impersonate="no" />

        <Property Id="LaunchFluentDoAgentWinSvc" Value=" "/>
        <CustomAction Id="SetLaunchFluentDoAgentWinSvcCommand" Property="LaunchFluentDoAgentWinSvc" Value="&quot;sc.exe&quot; start @FLB_OUT_NAME@" Execute="immediate" />
        <CustomAction Id="LaunchFluentDoAgentWinSvc" BinaryKey="WixCA" DllEntry="CAQuietExec" Execute="deferred" Return="ignore" Impersonate="no" />

        <Property Id="StopFluentDoAgentWinSvc" Value=" "/>
        <CustomAction Id="SetStopFluentDoAgentWinSvcCommand" Property="StopFluentDoAgentWinSvc" Value="&quot;sc.exe&quot; stop @FLB_OUT_NAME@" Execute="immediate" />
        <CustomAction Id="StopFluentDoAgentWinSvc" BinaryKey="WixCA" DllEntry="CAQuietExec" Execute="deferred" Return="ignore" Impersonate="no" />

        <Property Id="DeleteFluentDoAgentWinSvc" Value=" "/>
        <CustomAction Id="SetDeleteFluentDoAgentWinSvcCommand" Property="DeleteFluentDoAgentWinSvc" Value="&quot;sc.exe&quot; delete @FLB_OUT_NAME@" Execute="immediate" />
        <CustomAction Id="DeleteFluentDoAgentWinSvc" BinaryKey="WixCA" DllEntry="CAQuietExec" Execute="deferred" Return="ignore" Impersonate="no" />

        <InstallExecuteSequence>
            <Custom Action="SetCreateFluentDoAgentWinSvcCommand" After="InstallFiles">NOT Installed</Custom>
            <Custom Action="CreateFluentDoAgentWinSvc" After="SetCreateFluentDoAgentWinSvcCommand">NOT Installed</Custom>
            <Custom Action="SetLaunchFluentDoAgentWinSvcCommand" After="CreateFluentDoAgentWinSvc">LAUNCHSERVICE="1" AND NOT Installed</Custom>
            <Custom Action="LaunchFluentDoAgentWinSvc" After="SetLaunchFluentDoAgentWinSvcCommand">LAUNCHSERVICE="1" AND NOT Installed</Custom>

            <Custom Action="SetStopFluentDoAgentWinSvcCommand" After="InstallInitialize">REMOVE="ALL" AND NOT UPGRADINGPRODUCTCODE</Custom>
            <Custom Action="StopFluentDoAgentWinSvc" After="SetStopFluentDoAgentWinSvcCommand">REMOVE="ALL" AND NOT UPGRADINGPRODUCTCODE</Custom>
            <Custom Action="SetDeleteFluentDoAgentWinSvcCommand" After="StopFluentDoAgentWinSvc">REMOVE="ALL" AND NOT UPGRADINGPRODUCTCODE</Custom>
            <Custom Action="DeleteFluentDoAgentWinSvc" After="SetDeleteFluentDoAgentWinSvcCommand">REMOVE="ALL" AND NOT UPGRADINGPRODUCTCODE</Custom>
        </InstallExecuteSequence>
    </Product>
</Wix>
