# FluentDo Agent is an enterprise-hardened distribution of Fluent Bit

description "@FLB_PROG_NAME@"

# start in normal runlevels when disks are mounted and networking is available
start on runlevel [2345]
stop on runlevel [!2345]

respawn
exec /opt/fluentdo-agent/bin/fluentdo-agent -c /etc/fluentdo-agent/fluentdo-agent.conf
